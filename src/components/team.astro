---
import TeamData from "../../public/json/team.json";

// Define proper types to match your JSON structure
interface TeamMember {
  name: string;
  position: string;
  isCoordinator?: number;
  coordinator?: string;
  remove?: string;
  pfp?: string;
  pfp1?: string;
  links?: Record<string, string>; // Ensure links is explicitly typed as Record<string, string>
}

interface TeamDataInterface {
  members: TeamMember[];
}

const typedTeamData = { members: TeamData } as TeamDataInterface;
const filteredMembers = typedTeamData.members;

// Select 14 random members
const shuffleArray = (array: any[]) => {
  const newArray = [...array];
  for (let i = newArray.length - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [newArray[i], newArray[j]] = [newArray[j], newArray[i]];
  }
  return newArray;
};

const randomMembers = shuffleArray(filteredMembers).slice(0, 14);

// Generate unique background number for each member
const getRandomBgNum = () => Math.floor(Math.random() * 5) + 1;
const memberBgNums = randomMembers.map(() => getRandomBgNum());

// Calculate how many more members are not shown
const remainingMembers = filteredMembers.length - 14;
---

<div class="max-w-[1600px] mx-auto">
  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">
    {
      randomMembers.map((member, index) => (
        <div class="team-member relative group">
          <div 
            class="block rounded-2xl overflow-hidden bg-gradient-to-br from-zinc-800/60 to-zinc-900 border border-zinc-700/10 shadow-xl hover:shadow-2xl transition-all duration-300 h-full"
          >
            <div class="relative h-40 overflow-hidden">
              <div class="absolute inset-0 bg-gradient-to-b from-blue-500/20 to-purple-600/20 mix-blend-overlay opacity-60"></div>
              <img
                src={member.pfp ? member.pfp : `/img/defaultbg${memberBgNums[index]}.png`}
                alt={`${member.name} background`}
                class="w-full h-full object-cover opacity-60 group-hover:scale-110 transition-transform duration-700 ease-out"
              />
              <div class="absolute bottom-0 left-0 w-full h-2/3 bg-gradient-to-t from-zinc-900 to-transparent"></div>
            </div>
            
            <div class="relative -mt-16 px-5 pb-5 text-center">
              <div class="mb-3 flex justify-center">
                <img
                  src={member.pfp1 ? member.pfp1 : "/img/mascot_png.png"}
                  alt={member.name}
                  class="w-24 h-24 rounded-full object-cover border-4 border-zinc-900 shadow-lg group-hover:scale-105 transition-all duration-300 ease-out"
                  transition:name={`team-image-${member.name}`}
                />
              </div>
              
              <h3 
                class="text-xl font-bold text-white mb-1 group-hover:text-blue-400 transition-colors duration-300"
                transition:name={`team-name-${member.name}`}
              >
                {member.name}
              </h3>
              
              <p class="text-zinc-400 text-sm">
                {member.position}
              </p>
              
              {member.links && Object.keys(member.links).length > 0 && (
                <div class="mt-4 pt-4 border-t border-zinc-700/30 flex justify-center gap-3 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-500">
                  {Object.entries(member.links).slice(0, 3).map(([platform, url]) => (
                    <a
                      href={url as string}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-8 h-8 flex items-center justify-center rounded-full bg-zinc-800 hover:bg-zinc-700 text-white text-xs transition-colors duration-200"
                      aria-label={platform}
                    >
                      {platform.charAt(0).toUpperCase()}
                    </a>
                  ))}
                  {Object.keys(member.links).length > 3 && (
                    <span class="w-8 h-8 flex items-center justify-center rounded-full bg-zinc-800 text-white text-xs">
                      +{Object.keys(member.links).length - 3}
                    </span>
                  )}
                </div>
              )}
            </div>
            
            <div class="absolute inset-0 rounded-2xl border border-blue-400/0 group-hover:border-blue-400/30 pointer-events-none transition-all duration-500"></div>
          </div>
        </div>
      ))
    }

    <!-- The "View More" card -->
    <a href="/team" class="team-member relative group">
      <div class="block rounded-2xl overflow-hidden bg-gradient-to-br from-blue-900/60 to-indigo-900/60 border border-blue-700/20 shadow-xl hover:shadow-2xl transition-all duration-300 h-full flex flex-col items-center justify-center p-6 group-hover:bg-gradient-to-br group-hover:from-blue-800/60 group-hover:to-indigo-800/60">
        <div class="mb-5 flex flex-col justify-center items-center">
          <div class="w-24 h-24 rounded-full flex items-center justify-center border-4 border-zinc-900 bg-blue-500/10 shadow-lg text-4xl text-blue-300 font-bold group-hover:scale-110 transition-all duration-300 ease-out">
            +{remainingMembers}
          </div>
        </div>
        
        <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-300 transition-colors duration-300">
          ¡Hay más miembros!
        </h3>
        
        <p class="text-blue-200/80 text-sm text-center mb-6">
          Conoce al resto del equipo que hace posible TARS
        </p>
        
        <div class="inline-flex items-center justify-center gap-2 bg-white/10 group-hover:bg-white/20 px-4 py-2 rounded-lg text-white text-sm transition-colors mt-auto">
          Ver todo el equipo
          <img 
            src="https://unpkg.com/pixelarticons@1.8.1/svg/chevron-right.svg"
            alt="Arrow Right"
            class="w-4 h-4 invert transform transition-transform duration-300 group-hover:translate-x-1"
          />
        </div>
          
        <div class="absolute -bottom-1 -right-1 w-32 h-32 bg-gradient-to-tr from-transparent to-blue-400/10 rounded-full filter blur-xl opacity-70 group-hover:opacity-100 transition-opacity duration-500"></div>
        <div class="absolute -top-1 -left-1 w-32 h-32 bg-gradient-to-bl from-transparent to-indigo-400/10 rounded-full filter blur-xl opacity-70 group-hover:opacity-100 transition-opacity duration-500"></div>
      </div>
    </a>
  </div>
</div>

<style>
  .team-member {
    transform: translateZ(0);
  }

  .team-member:hover {
    z-index: 10;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .team-member::after {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #3b82f6, #6366f1, #8b5cf6, #3b82f6);
    background-size: 400% 400%;
    z-index: -1;
    border-radius: 1rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .team-member:hover::after {
    opacity: 0.4;
    animation: gradient 10s ease infinite;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>